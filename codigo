    private void btMaisActionPerformed(java.awt.event.ActionEvent evt) {                                       
       num1 = Double.parseDouble(jTVisor.getText());
       jTVisor.setText("");
       sinal = "soma";
    }                                      

    private void btIgualActionPerformed(java.awt.event.ActionEvent evt) {                                        
     num2 = Double.parseDouble(jTVisor.getText());
     if (sinal == "soma"){
        jTVisor.setText(String.valueOf(num1+num2));
     }
     if (sinal == "menos"){
        jTVisor.setText(String.valueOf(num1-num2));
     }
     if (sinal == "multiplicar"){
        jTVisor.setText(String.valueOf(num1*num2));
     }
     if (sinal == "divisao"){
        jTVisor.setText(String.valueOf(num1/num2));
     }
    }                                       

    private void btMenosActionPerformed(java.awt.event.ActionEvent evt) {                                        
     num1 = Double.parseDouble(jTVisor.getText());
     jTVisor.setText("");
     sinal = "menos";
    }                                       

    private void btMultiplicaçãoActionPerformed(java.awt.event.ActionEvent evt) {                                                
     num1 = Double.parseDouble(jTVisor.getText());
     jTVisor.setText("");
     sinal = "multiplicar";
    }                                               

    private void btDividirActionPerformed(java.awt.event.ActionEvent evt) {                                          
     num1 = Double.parseDouble(jTVisor.getText());
     jTVisor.setText("");
     sinal = "divisao";
    }                                         

    private void btCLRActionPerformed(java.awt.event.ActionEvent evt) {                                      
     num1 = 0;
     num2 = 0;
     jTVisor.setText("");
    }                                     

    private void btBSPActionPerformed(java.awt.event.ActionEvent evt) {                                      
     num2 = 0;
     jTVisor.setText(String.valueOf(num1));
    }                                     

    private void btMaisMenosActionPerformed(java.awt.event.ActionEvent evt) {                                            
     if (temp.startsWith("-")){
        temp = temp.replace('-','+');}
     else if (temp.startsWith("+")){
        temp = temp.replace('+','-');}
     else{
        temp = "+" + temp;
 }
    jTVisor.setText(temp);
    }                                           

    private void btSairActionPerformed(java.awt.event.ActionEvent evt) {                                       
        System.exit(0);
    }                                      

    private void btSobreActionPerformed(java.awt.event.ActionEvent evt) {                                        
        new sobre().setVisible(true);
    }                                       

    private void btColarActionPerformed(java.awt.event.ActionEvent evt) {                                        
      jTVisor.setText(copia);
    }                                       

    private void btCopiarActionPerformed(java.awt.event.ActionEvent evt) {                                         
      copia = jTVisor.getText(); 
    }                                        

    private void bt2ActionPerformed(java.awt.event.ActionEvent evt) {                                    
      numeroDigitado("2");
    }                                   

